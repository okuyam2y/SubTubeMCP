{
  "name": "youtube-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for YouTube video search, channel stats, metadata, transcripts and subtitles",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "node test_subtitle_handler.js",
    "test:full": "node test_subtitle_full_coverage.js",
    "test:coverage": "c8 --reporter=text --reporter=html node test_subtitle_full_coverage.js",
    "test:coverage:detail": "c8 --reporter=text --reporter=html --all --src=src node test_subtitle_full_coverage.js"
  },
  "keywords": [
    "mcp",
    "youtube",
    "subtitles",
    "transcripts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "googleapis": "^144.0.0",
    "youtube-transcript": "^1.2.1",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
